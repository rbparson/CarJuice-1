<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
	android:layout_height="wrap_content" >
	
    <TextView
    android:id="@+id/stationName"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="13dp"
    android:layout_marginBottom="13dp"
    android:textColor="#00CD00"
    android:textSize="20sp" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/stationName">
        
	    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >
		 
		    <TextView
		        android:id="@+id/address"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/stationName"/>
		    
		    <TextView
		        android:id="@+id/distance"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/address"/>
		    
		    <TextView
		        android:id="@+id/intersection"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/distance"/> 
		     
		     <RelativeLayout>
		     <ImageButton android:id="@+id/mapButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="40dp"
		     	android:layout_marginLeft="40dp"
		 	    android:layout_marginBottom="5dp"
				android:src="@drawable/mapicon"
				android:background="@null"
				android:layout_below="@+id/intersection"
				android:contentDescription="Map It"
				/>
		    
		     <ImageButton android:id="@+id/navButton"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="40dp"
		     	android:layout_marginLeft="40dp"
		 	    android:layout_marginBottom="5dp"
				android:src="@drawable/navigation"
				android:background="@null"
				android:layout_toRightOf="@+id/mapButton"
				android:contentDescription="Navigate"
				/>
		    
		    <TextView
		        android:id="@+id/level1Chargers"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/mapButton"/>
		    
		    <TextView
		        android:id="@+id/level2Chargers"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/level1Chargers"/>
		    
		    <TextView
		        android:id="@+id/dcFastChargers"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/level2Chargers"/>
		    
		    <TextView
		        android:id="@+id/ownerType"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/dcFastChargers"/>
		
		    <TextView
		        android:id="@+id/operatingHours"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/ownerType"/>    
		    
		    <TextView
		        android:id="@+id/network"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/operatingHours"/>
		
		    
		    <TextView
		        android:id="@+id/groupsWithAccess"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/network"/>
		    
		    <TextView
		        android:id="@+id/telephone"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginBottom="5dp"
		 	    android:layout_marginLeft="13dp"
		        android:textColor="#FFF" 
		        android:layout_below="@+id/groupsWithAccess"/>
		    
		    <Button
		 	    android:id="@+id/dialogButtonOK"
		 	    android:layout_width="fill_parent"
		 	    android:layout_height="48dp"
		 	    android:layout_alignParentLeft="true"
		 	    android:layout_marginRight="3dp"
		 	    android:layout_marginBottom="3dp"
		 	    android:layout_marginLeft="3dp"
		 	    android:layout_below="@+id/telephone"
		 	    android:text="@string/dialog_back"
		 	    />
		</RelativeLayout>
    </ScrollView>
    
    
</RelativeLayout>